# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'Productiv (iOS)' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Productiv (iOS)
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'FirebaseFirestore'
  pod 'FirebaseFirestoreSwift'

end

target 'Productiv (macOS)' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for Productiv (macOS)
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/Database'
  pod 'FirebaseFirestore'
  pod 'FirebaseFirestoreSwift'


end

